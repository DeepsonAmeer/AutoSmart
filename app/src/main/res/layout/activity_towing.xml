<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".RequestActivity">

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aldrich"
        android:text="TOWING SERVICE"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="20sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aldrich"
                android:text="Car make" />

            <EditText
                android:id="@+id/T_CarMake_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_background"
                android:ems="10"
                android:fontFamily="@font/aldrich"
                android:hint="E.g Mercedes"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColorHint="#727272" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aldrich"
                android:text="Car model" />

            <EditText
                android:id="@+id/T_CarModel_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_background"
                android:ems="10"
                android:fontFamily="@font/aldrich"
                android:hint="E.g C-class"
                android:inputType="text"
                android:padding="10dp"
                android:textColorHint="@color/darkgray" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aldrich"
                android:text="Fault Description" />

            <EditText
                android:id="@+id/T_Desc_edit"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/corner_background"
                android:ems="10"
                android:hint="E.g Engine overheating"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/yellow"
                android:textColorHint="@color/darkgray" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aldrich"
                android:text="Location" />

            <EditText
                android:id="@+id/T_Location_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_background"
                android:ems="10"
                android:hint="E.g Lagos"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/yellow"
                android:textColorHint="@color/darkgray" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/towing_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>